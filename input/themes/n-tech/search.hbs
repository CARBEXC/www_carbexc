{{> head}}
{{> navbar}}
<main>
    <div class="page page--search wrapper">
        <div class="page__title page__title--centered">
            <h1>
                {{ translate 'search.title' }}
            </h1>
        </div>
        <div class="container container--centered">
            <div class="articles">
                <form action="{{@website.searchUrl}}" class="page--search__form">
                    <input type="search" name="{{@config.custom.searchParam}}" placeholder="{{ translate 'search.placeholder' }}" class="page--search__input" />
                    <button type="submit">{{ translate 'search.submit' }}</button>
                </form>
                <script>
                    (function() {
                        var cx = '{{@config.custom.searchId}}';
                        var gcse = document.createElement('script');
                        gcse.type = 'text/javascript';
                        gcse.async = true;
                        gcse.src = 'https://cse.google.com/cse.js?cx=' + cx;
                        var s = document.getElementsByTagName('script')[0];
                        s.parentNode.insertBefore(gcse, s);
                    })();

                </script>
                <gcse:searchresults-only></gcse:searchresults-only>
            </div>
        </div>
    </div>
</main>
{{> footer}}
